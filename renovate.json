{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "platform": "github",
  "repositories": [
    "nastoychev/wireui"
  ],
  "dependencyDashboard": true,
  "assignees": [
    "nastoychev"
  ],
  "labels": [
    "dependencies"
  ],
  "automerge": true,
  "automergeType": "pr",
  "prConcurrentLimit": 5,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchManagers": [
        "composer"
      ],
      "schedule": [
        "every weekend"
      ],
      "enabled": true,
      "automerge": false,
      "groupName": "All Composer Updates",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchManagers": [
        "npm"
      ],
      "schedule": [
        "every weekend"
      ],
      "enabled": true,
      "automerge": false,
      "groupName": "All NPM Updates",
      "matchPackageNames": [
        "*"
      ]
    }
  ]
}
